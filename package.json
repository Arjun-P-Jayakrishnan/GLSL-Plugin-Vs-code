{
  "name": "glsl-shaderlab",
  "displayName": "GLSL ShaderLab",
  "description": "Develop, edit, and preview GLSL vertex and fragment shaders with live WebGL rendering and full language support inside VSCode.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:glslShaderLab.showPreview"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "tsc -p ./"
  },
  "contributes": {
    "languages": [
      {
        "id": ".glsl,.vert,.frag",
        "aliases": [
          "GLSL Shader Language",
          ".glsl,.vert,.frag"
        ],
        "extensions": [
          ".glsl",
          ".vert",
          ".frag"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": ".glsl,.vert,.frag",
        "scopeName": "source.glsl",
        "path": "./syntaxes/.glsl,.vert,.frag.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "glslShaderLab.showPreview",
        "title": "GLSL: Show Live Preview"
      }
    ]
  }
}
