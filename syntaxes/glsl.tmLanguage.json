{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "GLSL",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments":{
			"patterns":[
				{
					"captures": {
						"0":{
							"name":"punctuation.definition.comment.glsl"
						}
					},
					"match": "/\\*\\*/",
					"name":"comment.block.empty.glsl"
				},
				{
					"include":"#comments-inline"
				}
			]

		},
		"comments-inline":{
			"patterns": [
				{
					"begin": "/\\*",
					"captures": {
						"0":{
							"name":"punctuation.defenition.comment.glsl"
						}
					},
					"end": "\\*/",
					"name":"comment.block.glsl"
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.glsl",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.glsl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.glsl",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.glsl"
}